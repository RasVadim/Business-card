@import '../../../../styles/vars.styl'

.section
  background var(--background-front-color)
  border-radius 40px
  padding 16px 10px
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.06)

  @media (min-width $mobile-width)
    padding 16px 24px

.dark
  background var(--opposite-contrast-color)

.header
  display flex
  align-items center
  gap 10px
  padding 4px 14px 4px

  @media (min-width $mobile-width)
    padding 4px 0 4px

.icon
  width 24px
  height 24px

.sectionTitle
  margin 0
  font-weight 700
  color var(--text-color)