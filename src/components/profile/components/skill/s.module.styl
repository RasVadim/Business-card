.skill
  display inline-flex
  align-items center
  gap 6px
  border 1px dotted var(--secondary-border-color)
  border-radius 24px
  padding 6px
  font-size 12px
  color var(--text-color)

  &:hover
    border-style solid

.wider
  padding 6px 10px

.icon
  width 16px
  height 16px

.tooltipTitle
  display flex
  align-items center
  gap 6px
  white-space nowrap

.tooltipDescription
  font-size 12px
  color var(--opposite-contrast-color)
  min-width 180px
  opacity 0.8