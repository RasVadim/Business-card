@import '../../../../styles/vars.styl'

.wrapper
  display flex
  gap 16px
  border-radius 8px
  padding 240px 16px 280px
  justify-content center

.center
  display flex
  gap 16px
  width auto
  align-items center
  flex-direction column

  @media (min-width $mobile-width)
    flex-direction row
    width 550px

.titleBlock
  display flex
  flex-direction column
  gap 8px
  justify-content center
  align-items center

  @media (min-width $mobile-width)
    align-items flex-start

.name
  margin 0
  font-size 32px
  font-weight 300
  color var(--text-highlight-color)

.role
  color var(--accent-color)
  font-weight 600
  font-size 17px