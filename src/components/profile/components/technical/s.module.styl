.category
  margin 22px 0 4px

.categoryTitle
  font-weight 300
  margin-bottom 12px
  font-size 14px
  color var(--brand-g1-color)

.skills
  display flex
  flex-wrap wrap
  gap 8px

.skill
  display inline-flex
  align-items center
  gap 6px
  border 1px dotted var(--secondary-border-color)
  border-radius 14px
  padding 6px 10px
  font-size 12px
  color var(--text-color)

.icon
  width 16px
  height 16px