
.photo
  width 240px
  height 240px
  border-radius 50%
  overflow hidden
  background var(--avatar-bg-color)
  border solid var(--accent-color)
  box-shadow 0 6px 24px -12px rgba(0, 0, 0, 0.35)
  flex 0 0 auto
  position relative

// Theme-driven override without rerender reliance
:global(body.light-theme) .photo
  border-width 1px

:global(body.dark-theme) .photo
  border-width 4px

.image
  display block
  width 100%
  height 100%
  object-fit cover
  object-position center
  user-select none
  pointer-events none
  position absolute
  inset 0
  opacity 0
  transform scale(1.02)
  transition opacity 0.5s ease, transform 0.5s ease

.active
  // Top layer, visible
  z-index 3
  opacity 1
  transform scale(1)

.next
  // Pre-rendered next frame directly beneath the active image
  z-index 2
  opacity 1
  transform scale(1)

.prev
  // Previous frame stays on top and fades out smoothly
  z-index 4
  opacity 0
  transform scale(1)

.hidden
  // All other images kept at the bottom invisible
  z-index 1
  opacity 0
  transform scale(1.02)