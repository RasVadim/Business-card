.wrapper
  padding 14px
  border 1px dotted var(--secondary-border-color)
  border-radius 40px
  margin 20px 0 28px

.headerRow
  display flex
  justify-content space-between
  align-items flex-start

.leftSide
  display flex
  align-items center
  gap 16px

.image
  width 50px
  height 50px
  border-radius 50%
  overflow hidden
  border 1px dotted var(--secondary-border-color)
  background-color var(--text-button-color)
  background-image linear-gradient(45deg, var(--avatar-bg-color), var(--text-button-color))

  img
    width 100%
    height 100%
    object-fit cover

.leftTitle
  display flex
  flex-direction column

.position
  font-weight 700
  font-size 18px
  color var(--text-color)

.company
  font-weight 700
  color var(--brand-g1-color)
  margin-top 2px

.rightMeta
  text-align right
  color var(--secondary-color)
  font-size 12px

.location
  margin-top 6px

.subRow
  display grid
  grid-template-columns 160px 1fr
  gap 16px
  margin-top 8px

.period
  color var(--secondary-color)
  font-size 12px

.projects
  color var(--secondary-color)
  font-style italic
  font-size 12px
  margin 0

  li
    list-style disc

.description
  margin 24px 0 16px
  padding-left 18px
  display grid
  gap 4px
  color var(--text-color)
