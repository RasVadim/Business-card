@import '../../../../../../styles/vars.styl'

.info
  display flex
  flex-direction column
  gap 14px
  padding 22px 16px 14px 18px
  width 100%

  @media (min-width $mobile-width)
    width 400px
    padding 14px 16px 14px 18px

.iconAndTitle
  display flex
  align-items center
  gap 12px

.icon
  width 36px
  height 36px
  border-radius 8px
  object-fit cover
  border 1px solid var(--border-color)
  background var(--contrast-bg-color)

.title
  font-weight 600
  font-size 18px
  color var(--text-color)
  max-width 180px

.companyTitle
  color var(--non-active-color)
  font-size 14px
  display flex
  align-items center
  gap 8px

  img
    width 20px
    height 20px
    border-radius 50%
    background-color var(--img-bg-color)

.description
  color var(--secondary-color)
  font-size 14px
  padding-top 16px
  white-space pre-line

.links
  display flex
  flex-direction column
  gap 6px
  margin-top 12px

.link
  display flex
  align-items center
  gap 8px
  color var(--brand-g2-color)
  text-decoration none
  font-size 13px
  transition color 0.2s ease
  opacity 0.5

  &:hover
    opacity 1

  span
    color var(--text-color)
    word-break break-all
    font-size 10px

    &:hover
      color var(--brand-g1-color)

.techList
  display flex
  flex-wrap wrap
  gap 8px
  align-content flex-start
  align-self end
  width 100%
  justify-content center
  padding-right 22px
  min-width 250px
  margin auto auto 0

  @media (min-width $mobile-width)
    margin auto 0 0 0
