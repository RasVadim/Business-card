@import '../../../../../../styles/vars.styl'

.media
  width 100%

.video
  top 0
  left 0
  width 100%
  height 100%
  border-radius 40px
  object-fit cover

.photo
  top 0
  left 0
  width 100%
  height 100%
  border-radius 40px
  object-fit cover

.videoPlaceholder
  width 100%
  height 100%
  border-radius 40px
  min-height 270px
  background linear-gradient(135deg, rgba(122, 122, 122, 0.05), rgba(0, 0, 0, 0))

  @media (min-width $mobile-width)
    min-height 380px

.tooltipContent
  display flex
  flex-direction column
  gap 10px

.tooltipDescription
  color var(--opposite-contrast-color)
  opacity 0.9
  white-space pre-line
