.wrapper
  display flex
  width 100%
  border-radius 40px
  background var(--contrast-bg-color)
  border 1px dotted var(--secondary-border-color)
  box-shadow 0 0px 4px rgba(0, 0, 0, 0.15)

.media
  width 100%

.video
  top 0
  left 0
  width 100%
  height 100%
  border-radius 40px
  object-fit cover
  border-bottom 1px solid var(--border-color)

.videoPlaceholder
  width 100%
  height 100%
  border-radius 40px
  min-height 380px
  background linear-gradient(135deg, rgba(255, 255, 255, 0.06), rgba(255, 255, 255, 0))

.info
  display flex
  flex-direction column
  gap 14px
  padding 14px 16px 14px 18px
  width 400px

.iconAndTitle
  display flex
  align-items center
  gap 12px

.icon
  width 36px
  height 36px
  border-radius 8px
  object-fit cover
  border 1px solid var(--border-color)
  background var(--contrast-bg-color)

.title
  font-weight 600
  font-size 18px
  color var(--text-color)

.companyTitle
  color var(--secondary-color)
  font-size 14px
  display flex
  align-items center
  gap 8px

  img
    width 20px
    height 20px
    border-radius 50%
    background-color var(--img-bg-color)

.skills
  display flex
  flex-wrap wrap
  gap 8px
  align-content flex-start
  align-self end
  margin-top auto
  width 100%
  justify-content center
  padding-right 22px

.tooltipContent
  display flex
  flex-direction column
  gap 10px

.tooltipDescription
  color var(--opposite-contrast-color)
  opacity 0.9

.techList
  display flex
  flex-wrap wrap
  gap 6px

.tech
  padding 4px 8px
  border-radius 12px
  border 1px solid var(--border-color)
  color var(--opposite-contrast-color)