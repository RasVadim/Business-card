@import '../../styles/vars.styl'

.container
  position fixed
  bottom 20px
  left 0
  justify-content space-between
  align-items center
  padding 0 12px
  grid-area tabBar
  z-index 100
  width 100vw
  width auto
  left auto
  right 0

  @media (min-width $medium-width)
    right 0
    left auto

  @media (min-width $tablet-width)
    right calc(50% - 640px)

.tabBar
  display flex
  line-height 6px
  box-shadow 0 0 26px -12px var(--shadow-color)
  background-color var(--background-front-color)
  border-radius 40px
  max-width 420px
  margin 0 auto
  flex-direction column
  justify-content start
  align-items start
  gap 5px
  padding 10px

  @media (min-width $medium-width)
    box-shadow none
    gap 10px
    padding 15px