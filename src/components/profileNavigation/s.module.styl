.container
  display flex
  gap 6px
  align-items center

.item
  opacity 0
  transform translateY(20px)
  animation fadeInUp 0.3s ease-out forwards
  animation-delay var(--delay, 0s)

@keyframes fadeInUp
  from
    opacity 0
    transform translateY(20px)

  to
    opacity 1
    transform translateY(0)