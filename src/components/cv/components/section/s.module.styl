.section
  background var(--c-white-color)
  border-radius 8px
  padding 16px
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.06)

.sectionTitle
  margin 0 0 8px
  font-weight 700
  color var(--c-text-color)

.sectionContent
  display flex
  flex-direction column
  gap 16px

.hight
  overflow hidden
  position relative

  &::after
    content ''
    position absolute
    bottom 0
    left 0
    right 0
    height 30px
    background linear-gradient(transparent, var(--c-white-color))
    pointer-events none
