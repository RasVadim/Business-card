.skillsList
  display flex
  flex-direction column
  gap 8px

.skillCategory
  display flex
  flex-direction column

.categoryTitle
  font-size 12px
  color var(--c-text-color)
  font-weight 700

.skills
  display flex
  flex-wrap wrap
  gap 3px

.skillTag
  background var(--c-tag-color)
  color var(--c-white-color)
  padding 0px 5px
  border-radius 4px
  white-space nowrap
  font-size 13px