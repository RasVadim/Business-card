.wrapper
  display grid
  grid-template-columns 120px 1fr
  gap 16px
  background var(--background-front-color)
  border-radius 8px
  padding 16px
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.06)

.photo
  width 120px
  height 120px
  border-radius 60px
  background var(--avatar-bg-color)
  border 4px solid var(--brand-g1-color)
  overflow hidden

  img
    display block
    width 100%
    height 100%
    object-fit cover
    object-position center

.titleBlock
  display flex
  flex-direction column
  gap 8px

.name
  margin 0
  font-size 28px
  font-weight 700
  color var(--text-color)

.role
  color var(--brand-g1-color)
  font-weight 600

.summary
  margin 0
  color var(--text-color)
  opacity 0.85
  line-height 1.4

.contacts
  display grid
  grid-auto-flow column
  gap 12px
  align-items center

.contact
  font-size 12px
  color var(--opposite-contrast-color)
  background var(--brand-g1-color)
  padding 6px 10px
  border-radius 4px
