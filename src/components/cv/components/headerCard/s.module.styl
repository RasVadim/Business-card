.wrapper
  display grid
  grid-template-columns 120px 1fr
  grid-template-rows auto auto
  gap 16px
  background var(--c-dark-background-color)
  border-radius 8px
  padding 16px
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.06)

.photo
  width 120px
  height 120px
  border-radius 60px
  background var(--c-white-color)
  border 4px solid var(--brand-g1-color)
  overflow hidden
  display flex
  align-items center
  justify-content center
  position relative

  img
    display block
    width 100%
    height 100%
    object-fit cover
    object-position center

  .placeholder
    position absolute
    font-size 48px
    font-weight 400
    color var(--c-black-color)
    z-index 1

.titleBlock
  display flex
  flex-direction column
  gap 4px

.name
  margin 0
  font-size 28px
  font-weight 700
  color var(--c-light-text-color)

.role
  color var(--brand-g1-color)
  font-weight 600

.summary
  margin 0
  color var(--c-light-text-color)
  opacity 0.85
  line-height 1.4

.contacts
  display grid
  grid-auto-flow column
  gap 12px
  align-items center
  grid-column 1 / -1

.contact
  font-size 12px
  color var(--c-black-color)
  background var(--brand-g1-color)
  padding 6px 10px
  border-radius 4px
