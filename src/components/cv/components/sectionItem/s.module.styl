.sectionItem
  display flex
  flex-direction column

.title
  font-size 16px
  font-weight 600
  color var(--c-text-color)
  margin-bottom 2px

.subtitle
  font-size 14px
  font-weight 400
  color var(--c-text-color)
  margin-bottom 8px

.dateLocation
  display flex
  justify-content space-between
  align-items center

.dates
  font-size 12px
  font-weight 400
  color var(--c-accent-color)
  font-style italic

.location
  font-size 12px
  font-weight 400
  color var(--c-accent-color)
  font-style italic

.companyDescription
  font-size 12px
  color var(--c-secondary-color)
  font-weight 400
  opacity 0.6

.description
  font-size 12px
  color var(--c-text-color)
  font-weight 400
  margin-left 8px
  position relative
  
  &::before
    content ''
    position absolute
    left -8px
    top 6px
    width 4px
    height 4px
    background-color var(--c-accent-color)
    border-radius 50%