@import '../../styles/vars.styl'

.container
  position fixed
  top 2px
  left 0
  grid-area header
  padding 0 12px
  width 100vw
  z-index 100

  @media (min-width $medium-width)
    right 0
    left auto
    width auto
    top 20px

  @media (min-width $tablet-width)
    right calc(50% - 640px)

.header
  display flex
  justify-content space-between
  align-items center
  padding 6px 10px
  border-radius 40px
  box-shadow 0 4px 20px -13px var(--shadow-color)
  font-family 'Montserrat', sans-serif
  font-size 15px
  background var(--background-front-color)
  color var(--contrast-color)
  position relative
  max-width 420px
  margin 0 auto

  @media (min-width $medium-width)
    box-shadow none
    flex-direction column-reverse
    gap 10px
    padding 18px 19px
    min-height 100px

.title
  position absolute
  left 50%
  transform translateX(-50%)
  white-space nowrap

  @media (min-width $medium-width)
    position relative
    left 0
    transform none
    white-space normal
    text-align center
    font-size 16px

.leftSide
  display flex
  align-items center
  min-width 40px

.rightSide
  display flex
  align-items center
  justify-content flex-end
  min-width 40px

  @media (min-width $medium-width)
    min-width 10px

.preview
  position relative
  transform scale(0.8)
  padding 6px 0px
  top 0