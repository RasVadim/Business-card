@import '../../styles/vars.styl'

.chatButton
  position fixed
  bottom 116px
  right 12px
  width 44px
  height 44px
  border-radius 50%
  background linear-gradient(to top right, var(--brand-g1-color), var(--brand-g2-color))
  border none
  cursor pointer
  display flex
  align-items center
  justify-content center
  z-index 100
  box-shadow 0 6px 16px rgba(255, 76, 41, 0.25)
  transition all 0.3s cubic-bezier(0.4, 0, 0.2, 1)
  overflow visible
  opacity 0.6

  @media (min-width $medium-width)
    left auto
    width 48px
    height 48px
    bottom 150px
    right 32px

  @media (min-width $tablet-width)
    right calc(50% - 610px)

  &:hover
    transform scale(1.1)
    box-shadow 0 12px 32px rgba(255, 76, 41, 0.4)

  &:active
    transform scale(0.95)

.chatButtonIcon
  position relative
  z-index 2
  color white
  transition transform 0.3s cubic-bezier(0.4, 0, 0.2, 1)
  display flex
  align-items center
  justify-content center

  .chatButton:hover &
    transform scale(1.1)

.chatButtonPulse
  position absolute
  top -3px
  left -3px
  width calc(100% + 6px)
  height calc(100% + 6px)
  border-radius 50%
  background-color var(--brand-g1-color)
  opacity 0.5
  animation pulse 2s infinite
  z-index 1

@keyframes pulse
  0%
    transform scale(1)
    opacity 0.5

  50%
    transform scale(1.15)
    opacity 0.25

  100%
    transform scale(1.3)
    opacity 0
