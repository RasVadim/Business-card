// Message group container
.messageGroup
  display flex
  margin-bottom 10px
  align-items flex-end
  gap 10px

.userGroup
  justify-content flex-end

.botGroup
  justify-content flex-start

// Messages wrapper for grouping
.messagesWrapper
  display flex
  flex-direction column
  max-width 75%
  gap 1px

.userGroup .messagesWrapper
  align-items flex-end

.botGroup .messagesWrapper
  align-items flex-start
