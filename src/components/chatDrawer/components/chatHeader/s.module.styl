@import '../../../../styles/vars.styl'

.chatHeader
  display flex
  justify-content space-between
  align-items center
  padding 16px
  border-bottom 1px solid var(--border-color)

  @media (min-width $mobile-width)
    padding 16px 60px

.chatTitle
  font-size 16px
  font-weight 600
  color var(--text-color)
  margin 0

.chatStatus
  display flex
  align-items center
  gap 8px

.statusDot
  width 8px
  height 8px
  border-radius 50%
  background-color var(--c-offline-color)
  transition background-color 0.3s ease

.statusDot.connected
  background-color var(--c-online-color)

.statusText
  font-size 12px
  color var(--text-secondary-color)
