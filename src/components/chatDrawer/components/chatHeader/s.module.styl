@import '../../../../styles/vars.styl'

.wrapper
  display flex
  justify-content center
  padding 10px 16px
  border-bottom 1px solid var(--border-color)

  @media (min-width $mobile-width)
    padding 12px 60px

.chatHeader
  display flex
  justify-content space-between
  align-items center
  width 100%

  @media (min-width $mobile-width)
    width 980px

.userNameContainer
  display flex
  align-items center
  gap 1px

.userName
  font-size 16px
  font-weight 600
  color var(--text-color)
  margin 0
  cursor pointer
  padding 4px 8px
  border-radius 4px
  transition background-color 0.2s ease

  &:hover
    background-color var(--block-hover-bg-color)

.nameInput
  font-size 16px
  font-weight 600
  color var(--text-color)
  background transparent
  border none
  padding 4px 8px
  outline none
  width 200px
  height 32px
  text-align end

  &:focus
    border none

.chatStatus
  display flex
  align-items center
  gap 8px

.statusDot
  width 8px
  height 8px
  border-radius 50%
  background-color var(--c-offline-color)
  transition background-color 0.3s ease

.statusDot.connected
  background-color var(--c-online-color)

.statusText
  font-size 12px
  color var(--text-color)
  font-weight 100
