// Individual message
.message
  display flex
  align-items flex-end
  position relative

.userMessage
  justify-content flex-end

.botMessage
  justify-content flex-star

.ownerMessage
  .messageContent
    background-color var(--background-front-color) !important
    background linear-gradient(135deg, var(--c-brand1-t-color) 0%, var(--c-brand2-t-color) 100%) !important

// Message content bubble
.messageContent
  padding 8px 12px
  border-radius 18px
  position relative
  max-width 100%
  word-wrap break-word
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)
  color var(--text-color)

// User message styling
.userMessage .messageContent
  background linear-gradient(135deg, var(--secondary-color) 0%, var(--brand-g2-color) 100%)
  color var(--text-button-color)
  border-bottom-right-radius 4px
  margin-left 40px

// Bot message styling
.botMessage .messageContent
  background-color var(--img-bg-color)
  background linear-gradient(135deg, var(--img-bg-color) 0%, var(--shadow-hover-color) 100%)
  border-bottom-left-radius 4px
  margin-right 40px

// First message in group adjustments
.firstInGroup.userMessage .messageContent
  border-top-right-radius 18px

.firstInGroup.botMessage .messageContent
  border-top-left-radius 18px

// Last message in group adjustments
.lastInGroup.userMessage .messageContent
  border-bottom-right-radius 4px

.lastInGroup.botMessage .messageContent
  border-bottom-left-radius 4px

// Middle messages in group
.message:not(.firstInGroup):not(.lastInGroup) .messageContent
  border-radius 18px

// Message text
.messageText
  margin 0
  font-size 14px
  line-height 1.4
  word-wrap break-word

// Message meta (time and status)
.messageMeta
  display flex
  align-items center
  justify-content flex-end
  gap 4px
  margin-top 2px

.messageTime
  font-size 11px
  opacity 0.7
  white-space nowrap

.messageStatus
  font-size 11px
  opacity 0.7
  color inherit
